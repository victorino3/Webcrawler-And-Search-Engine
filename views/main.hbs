<div class="container">

  <div class="row height d-flex justify-content-center align-items-center">

    <div class="col-md-8">
      <form action="http://localhost:3000/product/search" method="POST">
      <div class="search">
        <i class="fa fa-search"></i>
        <input type="text" class="form-control" placeholder="Have a question? Ask Now" name="name">
        <button class="btn btn-primary">Search</button>
      </div>
      </form>

    </div>

  </div>
</div>
{{#if data}}
<p>{{this.outputNumber}}</p>
{{/if}}
<!--Content-->
<h2 class="mt-4 ml-3">Victor&amp;FurtunaStore</h2>
<div class="row row-cols-1 row-cols-md-3 g-4 m-2 ">
  {{#each data.searchResult}}
  <div class="col mb-2">
    <div class="card">
      <img src={{this.image}} class="card-img-top img-thumbnail" alt="...">
      <div class="card-body">
        <h5 class="card-title">new</h5>
        <p class="card-text">{{this.title}}</p>
        <a href="#" target="_blank"
          class="btn btn-primary">Buy now</a>
      </div>
    </div>
    <div class="card-footer">
      <small class="text-muted">Last updated 3 mins ago</small>
    </div>
  </div>  
  {{/each}}

</div>